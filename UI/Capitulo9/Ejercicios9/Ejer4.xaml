<Window x:Class="Cap8_9.UI.Capitulo9.Ejercicios9.Ejer4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cap8_9.UI.Capitulo9.Ejercicios9"
        mc:Ignorable="d"
        Title="Ejercicio 4" Height="202" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="Inserte un numero del 1 al 7."/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="InsertarNumeracionTextBox" Width="40" Height="20" Margin="5,0"/>
                <Button Name="InsertarButton" Content="Insertar" Width="60" Click="InsertarButton_Click"/>
            </StackPanel>

            <Label Content="Tipo de neumatico asociado a la numeracio."/>
            <TextBox Name="TipoTextBox" Width="200" IsReadOnly="True" Margin="5,0" HorizontalAlignment="Left"/>

            <Button Name="AtrasButton" Content="Atras" Width="60" Margin="5,20" HorizontalAlignment="Left" Click="AtrasButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
